    <style name="AppThemeNoActionBar" parent="AppTheme">
		<item name="android:windowActionBar">false</item>
		<item name="android:windowTitleSize">0dp</item>
		<item name="windowActionBar">false</item>
		<item name="android:windowBackground">@color/lock_screen_background</item>
	</style>
    
    <style name="AppThemeReporter" parent="AppTheme">
        <item name="actionBarThemeColorTitle">#ffffff</item>
        <item name="actionBarThemeColorIconTint">#ffffffff</item>
        <item name="actionBarThemeBackground">@drawable/actionbar_dark_background</item>
        <item name="actionBarThemeItemBackground">@drawable/actionbar_dark_item_selector</item>
        <item name="actionBarThemeButtonBackground">@drawable/actionbar_dark_button_selector</item>	
		<item name="actionBarMenuIcon">@drawable/ic_action_menu_read</item>
    </style>
     
    <style name="AppActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">?attr/actionBarThemeBackground</item>
        <item name="background">?attr/actionBarThemeBackground</item>
    </style>
    
    <style name="AppActionButtonStyle" parent="Widget.AppCompat.ActionButton">
    	<item name="android:minWidth">56dip</item>
    	<item name="android:background">?attr/actionBarThemeButtonBackground</item>
    	<item name="background">?attr/actionBarThemeButtonBackground</item>
    </style>
  
    <style name="AppActionBarTabBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.TabBar">
	    <item name="android:showDividers">middle</item>
	    <item name="android:divider">@null</item>
	</style>
    
    <!-- style for the tabs -->
    <style name="AppActionBarTabStyle" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_background_selector</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
	</style>
    
    <style name="AppActionBarTabTextStyle" parent="@style/Widget.AppCompat.Light.ActionBar.TabText">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@drawable/tab_foreground_selector</item>
    </style>
       
    <style name="DropDownItem" parent="@style/Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:textAppearance">?android:attr/textAppearanceInverse</item>
<!--         <item name="android:background">@drawable/accent_on_selected_selector</item> -->
	</style>
	
    <style name="SpinnerItem" parent="@style/Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:textAppearance">?android:attr/textAppearanceInverse</item>
    </style>
     
    <style name="ActionBarGreenButton" parent="@style/Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:textAppearance">?android:attr/textAppearanceInverse</item>
        <item name="android:background">@drawable/actionbar_light_button_inverted_selector</item>
    </style>
    
    <style name="ActionBarSpinnerStyle" parent="@style/Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:dropDownListViewStyle">@style/ActionBarSpinnerDropdownListStyle</item>
        <item name="dropDownListViewStyle">@style/ActionBarSpinnerDropdownListStyle</item>
        <item name="listPopupWindowStyle">@style/ActionBarSpinnerDropdownListStyle</item>
    </style>
    
    <style name="ActionBarSpinnerDropdownListStyle" parent="android:style/Widget.ListView.DropDown">
    	<item name="android:divider">@color/grey_light</item>
    	<item name="android:dividerHeight">1px</item>
	</style>
    
    <style name="AppActionBarTitleStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
<!--         <item name="android:textColor">@color/actionBarColorTitle</item> -->
        <item name="font">Glegoo-Regular</item>
    </style>

    <style name="AppActionBarFeedTitleStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/actionBarThemeColorTitle</item>
        <item name="font">Glegoo-Regular</item>
    </style>
    
 	<style name="AppActionBarOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
		<item name="android:src">@drawable/ic_action_overflow</item>
		<item name="android:background">?attr/actionBarThemeButtonBackground</item>
		<item name="android:minWidth">20dip</item>
    </style>
    
    
    <!-- Shared styles                                 -->
    <!--                                               -->
    <!--                                               -->
    
    <style name="SearchFieldStyle" parent="android:Widget.Holo.Light.TextView">
<!-- 		<item name="android:padding">0dp</item> -->
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/grey_light_medium</item>
    </style> 
       
    <style name="AddFeedUrlStyle" parent="SearchFieldStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/black</item>
    </style>  
       
   <style name="LockScreenEditStyle" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/grey_light_medium</item>
        <item name="android:textColorHint">@color/grey_light_medium</item>
    </style> 
    
   <style name="LockScreenEditCreateStyle" parent="LockScreenEditStyle">
        <item name="android:textSize">16sp</item>
   </style>     

	<style name="LockScreenTitleStyle" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#7C796A</item>
        <item name="font">Glegoo-Regular</item>
    </style> 
       
   <style name="LockScreenLanguageStyle" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/grey_light_medium</item>
        <item name="android:textColorHint">@color/grey_light_medium</item>
    </style> 

    <style name="LockScreenErrorStyle" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#E34136</item>
        <item name="font">Roboto-Regular</item>
    </style> 
   
   
    <style name="PopupListTitleStyle">
        <item name="android:background">@color/grey_light_medium</item>
		<item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/grey_dark</item>
		<item name="android:textAllCaps">true</item>
    </style>
    
    <style name="PopupListItemStyle">
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/grey_dark</item>
		<item name="android:textAllCaps">false</item>
    </style>
    
    
    
    <!-- Left side menu                                -->
    <!--                                               -->
    <!--                                               -->
    
    <style name="LeftSideMenuItemStyle">
        <item name="android:gravity">center_vertical</item>
