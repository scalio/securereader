		<item name="actionBarTabBarStyle">@style/AppActionBarTabBarStyle</item>
        <item name="actionBarTabStyle">@style/AppActionBarTabStyle</item>
		<item name="actionBarTabTextStyle">@style/AppActionBarTabTextStyle</item>
		<item name="spinnerDropDownItemStyle">@style/DropDownItem</item>
