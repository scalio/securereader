<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Modal popup styles              		       -->
    <!--                                               -->
    <!--                                               -->

	<dimen name="modalButtonMargin">5dp</dimen>

    <style name="ModalImageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">154dp</item>
		<item name="android:paddingTop">20dp</item>
		<item name="android:paddingBottom">0dp</item>
		<item name="android:paddingLeft">18dp</item>
		<item name="android:paddingRight">18dp</item>
	</style>

    <style name="ModalHeaderStyle">
        <item name="font">Glegoo-Regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/modal_header_text_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingBottom">10dp</item>
		<item name="android:paddingLeft">18dp</item>
		<item name="android:paddingRight">18dp</item>
	</style>
    
    <style name="ModalCaptionStyle">
        <item name="font">Roboto-Regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/modal_caption_text_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingBottom">10dp</item>
		<item name="android:paddingLeft">14dp</item>
		<item name="android:paddingRight">14dp</item>
	</style>

    <style name="ModalTextStyle">
        <item name="font">Roboto-Regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/modal_text_color</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ModalButtonContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
		<item name="android:paddingTop">5dp</item>
		<item name="android:paddingBottom">5dp</item>
		<item name="android:paddingLeft">5dp</item>
		<item name="android:paddingRight">5dp</item>
		<item name="android:minHeight">50dp</item>
		<item name="android:gravity">center</item>
	</style>
	
    <style name="ModalButtonStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffffff</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:background">@drawable/modal_button_primary_background_selector</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingBottom">10dp</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingRight">10dp</item>
		<item name="android:minHeight">50dp</item>
		<item name="android:gravity">center</item>
	</style>

    <style name="ModalButtonSecondaryStyle" parent="ModalButtonStyle">
		<item name="android:background">@drawable/modal_button_secondary_background_selector</item>   
    </style>

    <style name="ModalButtonTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffffff</item>
		<item name="android:textAllCaps">true</item>
	</style>

    <style name="ModalHeaderDividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.5dp</item>
        <item name="android:background">@color/modal_header_divider_color</item>
		<item name="android:layout_marginLeft">10dp</item>
		<item name="android:layout_marginRight">10dp</item>
    </style>
	
    
	<style name="ModalDialogTheme" parent="@android:Theme.Dialog">
	    <item name="android:windowMinWidthMajor">100%</item>
	    <item name="android:windowMinWidthMinor">100%</item>
	    <item name="android:background">@android:color/transparent</item>
	    <item name="android:windowBackground">@drawable/modal_background</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
		<item name="android:buttonBarStyle">@style/ModalButtonContainerStyle</item>
		<item name="android:buttonBarButtonStyle">@style/ModalButtonStyle</item>
		<item name="android:textAppearanceLarge">@style/ModalHeaderStyle</item>
        <item name="android:textAppearanceMedium">@style/ModalTextStyle</item>
        <item name="android:textAppearance">@style/ModalTextStyle</item>
        <item name="android:alertDialogStyle">@style/ModalDialogStyle</item>
    </style>

	<style name="ModalDialogStyle">
	    <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
	</style>

	<style name="ModalDialogStyleOld">
	    <item name="android:fullDark">@drawable/modal_background_old_device</item>
        <item name="android:topDark">@drawable/modal_background_old_device</item>
        <item name="android:centerDark">@drawable/modal_background_old_device</item>
        <item name="android:bottomDark">@drawable/modal_background_old_device</item>
        <item name="android:fullBright">@drawable/modal_background_old_device</item>
        <item name="android:centerBright">@drawable/modal_background_old_device</item>
        <item name="android:bottomBright">@drawable/modal_background_old_device</item>
        <item name="android:bottomMedium">@drawable/modal_background_old_device</item>
        <item name="android:centerMedium">@drawable/modal_background_old_device</item>
	</style>
		
	<style name="ModalTextAppearance">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#00ff00</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:background">#00ff00</item>
	</style>
	
	<style name="ModalAlertDialogButtonPositiveTheme" parent="@android:style/Theme.Dialog">
         <item name="android:buttonBarButtonStyle">@style/ModalButtonStyle</item>
         <item name="android:buttonStyle">@style/ModalButtonStyle</item>
    </style>
	
	<style name="ModalAlertDialogButtonNegativeTheme" parent="@android:style/Theme.Dialog">
         <item name="android:buttonBarButtonStyle">@style/ModalButtonSecondaryStyle</item>
         <item name="android:buttonStyle">@style/ModalButtonSecondaryStyle</item>
    </style>
				
	
	<style name="ModalListItemStyle">
        <item name="font">Roboto-Regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/modal_text_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
		<item name="android:paddingTop">12dp</item>
		<item name="android:paddingBottom">12dp</item>
		<item name="android:paddingLeft">18dp</item>
		<item name="android:paddingRight">18dp</item>
	</style>
	
</resources>