<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Settings activity styles 					   -->
    <!--                                               -->
    <!--                                               -->

    <style name="SettingsHeadingStyle">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SettingsSubHeadingStyle">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SettingsOptionGroupStyle">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@color/grey_light_medium</item>
    </style>

    <style name="SettingsOptionInfoStyle">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="SettingsRadioButtonStyle">
        <item name="android:button">@drawable/abc_btn_radio_material</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:buttonTint">@color/checkbox_color_selector</item>
        <item name="buttonTint">@color/checkbox_color_selector</item>
        <item name="android:theme">@style/SettingsCheckboxStyle</item>
    </style>

    <style name="SettingsRadioButtonSubStyle">
        <item name="android:button">@drawable/abc_btn_radio_material</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">-10dp</item>
        <item name="android:buttonTint">@color/checkbox_color_selector</item>
        <item name="buttonTint">@color/checkbox_color_selector</item>
        <item name="android:theme">@style/SettingsCheckboxStyle</item>
    </style>

    <style name="SettingsCheckboxStyle" parent="AppTheme">
        <item name="colorControlNormal">@color/grey</item>
    </style>
</resources>