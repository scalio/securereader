<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height"
        android:orientation="horizontal"
        android:background="@drawable/tab_bar_bg">
        <LinearLayout
                android:id="@+id/tab1Layout"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"

                android:clickable="true">
            <ImageView
                    android:id="@+id/image_view_tab_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"
                    android:padding="3dip"
                    android:background="@drawable/tab_button_selector"
                    android:src="@drawable/rss_tab_button" />
            <LinearLayout
                	android:orientation="horizontal"
                    android:id="@+id/image_divider"
                    android:layout_width="3px"
                    android:layout_marginTop="2px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/tab_bottom_margin"
                    android:background="@drawable/tab_separator" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/tab2Layout"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/image_view_tab_icon2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"
                    android:padding="3dip"
                    android:background="@drawable/tab_button_selector"
                    android:src="@drawable/play_tab_button" />
            <LinearLayout
                	android:orientation="horizontal"
                    android:id="@+id/image_divider2"
                    android:layout_width="3px"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2px"
                    android:layout_marginBottom="@dimen/tab_bottom_margin"
                    android:background="@drawable/tab_separator" />
        </LinearLayout>
        <LinearLayout
                android:id="@+id/tab3Layout"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"

                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/image_view_tab_icon3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"
                    android:padding="3dip"
                    android:background="@drawable/tab_button_selector"
                    android:src="@drawable/sound_tab_button" />
            <LinearLayout
                	android:orientation="horizontal"
                    android:id="@+id/image_divider3"
                    android:layout_width="3px"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2px"
                    android:layout_marginBottom="@dimen/tab_bottom_margin"
                    android:background="@drawable/tab_separator" />
        </LinearLayout>
        <LinearLayout
                android:id="@+id/tab4Layout"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:background="@drawable/tab_button_selector"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/image_view_tab_icon4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"
                    android:padding="3dip"
                    android:src="@drawable/chat_tab_button" />
            <LinearLayout
                	android:orientation="horizontal"
                    android:id="@+id/image_divider4"
                    android:layout_width="3px"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2px"
                    android:layout_marginBottom="@dimen/tab_bottom_margin"
                    android:visibility="invisible"
                    android:background="@drawable/tab_separator" />
        </LinearLayout>
</LinearLayout>