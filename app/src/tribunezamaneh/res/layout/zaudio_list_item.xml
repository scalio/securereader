<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dip"
                android:background="@drawable/audio_list_item_bg_selector"
                android:clickable="true" >

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="15dip"
            android:layout_toRightOf="@+id/textRss"
            android:layout_alignParentRight="true">
        <ImageView
                android:id="@+id/imagePlay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:visibility="visible"
                android:src="@drawable/button_play_image"/>

        <ImageView
                android:id="@+id/imagePause"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:visibility="invisible"
                android:src="@drawable/button_pause_image" />
    </RelativeLayout>

     <TextView
                android:id="@+id/textRss"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:maxLines="2"
                android:gravity="right|center_vertical"
                android:ellipsize="end"
                android:textSize="16sp"
                android:textColor="@color/audio_list_item_text" />
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_marginRight="15dip"
            android:layout_marginLeft="5dip"
            android:src="@drawable/audio_pic"/>

</LinearLayout>