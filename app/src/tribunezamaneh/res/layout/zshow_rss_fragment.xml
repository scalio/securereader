<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@drawable/bg_bottom_shadow">

        <ImageView
                android:id="@+id/headerImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/header_img_rss"/>

        <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:clickable="true">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                <TextView
                        android:id="@+id/titleRss"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_marginBottom="10dip"
                        android:textColor="@color/black"
                        android:textSize="@dimen/main_text_size_header"/>
                <ImageView
                        android:id="@+id/imageRss"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"/>
                <WebView
                        android:id="@+id/descriptionWebView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                    />
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:background="@color/white"
                        android:paddingTop="25dip">

                    <ImageView
                            android:id="@+id/shareFB"
                            android:layout_height="wrap_content"
                            android:layout_width="0dip"
                            android:layout_weight="1"
                            android:src="@drawable/facebook"
                            android:adjustViewBounds="true"
                            android:maxHeight="80dip"
                            android:maxWidth="80dip"
                            android:scaleType="fitCenter"
                            android:layout_marginLeft="2dip"
                            android:layout_marginRight="2dip"
                            android:clickable="true"/>
                    <ImageView
                            android:id="@+id/shareTwitter"
                            android:layout_height="wrap_content"
                            android:layout_width="0dip"
                            android:layout_weight="1"
                            android:src="@drawable/twitter"
                            android:adjustViewBounds="true"
                            android:maxHeight="80dip"
                            android:maxWidth="80dip"
                            android:scaleType="fitCenter"
                            android:layout_marginLeft="2dip"
                            android:layout_marginRight="2dip"
                            android:clickable="true"/>
                    <ImageView
                            android:id="@+id/sendMail"
                            android:layout_height="wrap_content"
                            android:layout_width="0dip"
                            android:layout_weight="1"
                            android:src="@drawable/mail2"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:maxHeight="80dip"
                            android:maxWidth="80dip"
                            android:layout_marginLeft="2dip"
                            android:layout_marginRight="2dip"
                            android:clickable="true"/>
                    <!--<ImageView-->
                            <!--android:id="@+id/googlePlus"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_width="0dip"-->
                            <!--android:layout_weight="1"-->
                            <!--android:src="@drawable/gplus"-->
                            <!--android:padding="4dp"-->
                            <!--android:maxHeight="80dip"-->
                            <!--android:maxWidth="80dip"-->
                            <!--android:adjustViewBounds="true"-->
                            <!--android:scaleType="fitCenter"-->
                            <!--android:layout_marginLeft="2dip"-->
                            <!--android:layout_marginRight="2dip"-->
                            <!--android:clickable="true"/>-->
                    </LinearLayout>
             </LinearLayout>
        </ScrollView>

    </LinearLayout>
</LinearLayout>
